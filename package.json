{
  "name": "operational-communication-hub",
  "version": "1.0.0",
  "description": "A web-based system for creating structured operational announcements with Slack integration",
  "main": "server/index.js",
  "scripts": {
    "start": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run server:start\" \"npm run client:start\"",
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run server\" \"npm run client\"",
    "server": "cd server && nodemon index.js",
    "server:start": "cd server && node index.js",
    "client": "cd client && npm start",
    "client:start": "cd client && npm start",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": ["announcements", "slack", "operations", "communication"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

